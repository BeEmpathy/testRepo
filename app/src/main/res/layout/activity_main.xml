<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/b_minus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="-"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/b8"
        app:layout_constraintStart_toEndOf="@+id/b_plus" />

    <Button
        android:id="@+id/b_plus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:width="50px"
        android:height="50px"
        android:text="+"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/b7"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b_divide"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="/"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/b_clear"
        app:layout_constraintStart_toEndOf="@+id/b_times" />

    <Button
        android:id="@+id/b_times"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="X"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/b9"
        app:layout_constraintStart_toEndOf="@+id/b_minus" />

    <Button
        android:id="@+id/b4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:width="50px"
        android:height="50px"
        android:text="4"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/b1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="3"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/b2" />

    <Button
        android:id="@+id/b1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:width="50px"
        android:height="50px"
        android:text="1"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="9"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/b6"
        app:layout_constraintStart_toEndOf="@+id/b8" />

    <Button
        android:id="@+id/b8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="8"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/b5"
        app:layout_constraintStart_toEndOf="@+id/b7" />

    <Button
        android:id="@+id/b6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="6"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/b3"
        app:layout_constraintStart_toEndOf="@+id/b5" />

    <Button
        android:id="@+id/b2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="2"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/b1" />

    <Button
        android:id="@+id/b5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="5"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/b2"
        app:layout_constraintStart_toEndOf="@+id/b4" />

    <Button
        android:id="@+id/b7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="7"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/b4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b0"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/b3" />

    <Button
        android:id="@+id/b_equal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="="
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/b0"
        app:layout_constraintStart_toEndOf="@+id/b6" />

    <Button
        android:id="@+id/b_clear"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="clear"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/b_equal"
        app:layout_constraintStart_toEndOf="@+id/b9" />

    <EditText
        android:id="@+id/editDisplayText"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:backgroundTint="#2B2B2B"
        android:clickable="false"
        android:ems="10"
        android:inputType="none"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:focusableInTouchMode="false"
        android:focusable="false"/>

    <EditText
        android:id="@+id/result"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:backgroundTint="#2B2B2B"
        android:ems="10"
        android:inputType="none"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/b_minus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:focusableInTouchMode="false"
        android:focusable="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>